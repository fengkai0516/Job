<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/textMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/etMoney"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_et"
        android:hint="请输入价格"
        android:inputType="number"
        android:maxLength="6"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="@id/textMoney"
        app:layout_constraintTop_toBottomOf="@id/textMoney" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/textMoney"
        app:layout_constraintTop_toBottomOf="@id/etMoney" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_et"
        android:hint="请输入时间"
        android:inputType="number"
        android:maxLength="6"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="@id/textTime"
        app:layout_constraintTop_toBottomOf="@id/textTime" />

    <Button
        android:id="@+id/buttonJump"
        android:text="jump"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/etTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="200dp"
        android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>